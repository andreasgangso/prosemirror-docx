{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node16",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "outDir": "dist/",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "demo/**/*"],
  "exclude": []
}
